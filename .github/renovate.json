{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "customManagers:biomeVersions",
    "helpers:pinGitHubActionDigests",
    "docker:pinDigests",
    "schedule:weekly"
  ],
  "semanticCommits": "enabled",
  "platformAutomerge": true,
  "devcontainer": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["(^|/)\\.devcontainer/Dockerfile$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>.+?)\\s+# (?<currentValue>.+?)\\s+FROM (?<packageName>.+?)@(?<currentDigest>sha256:[a-f0-9]+)"
      ],
      "autoReplaceStringTemplate": "# renovate: datasource={{{datasource}}} depName={{{depName}}}\n# {{{newValue}}}\nFROM {{{packageName}}}@{{{newDigest}}}"
    },
    {
      "customType": "regex",
      "description": "Track npm packages installed in GitHub Actions workflows",
      "fileMatch": ["\\.github/workflows/.+\\.yml$"],
      "matchStrings": [
        "npm install -g (?<depName>@?[a-z0-9-]+\\/[a-z0-9-]+)@(?<currentValue>[0-9.]+)"
      ],
      "datasourceTemplate": "npm"
    }
  ],
  "packageRules": [
    {
      "description": "Production dependencies use fix(deps) prefix",
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies"],
      "semanticCommitType": "fix",
      "semanticCommitScope": "deps"
    },
    {
      "description": "Development dependencies use chore(deps) prefix",
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps"
    },
    {
      "description": "GitHub Actions use chore(deps) prefix",
      "matchManagers": ["github-actions"],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps"
    },
    {
      "description": "Dev Container images use chore(deps) prefix",
      "matchManagers": ["devcontainer"],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps"
    },
    {
      "description": "NPM packages in workflows use chore(deps) prefix",
      "matchManagers": ["custom.regex"],
      "matchFileNames": [".github/workflows/**"],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps"
    },
    {
      "description": "Auto-merge patch and minor updates",
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    }
  ]
}
